class NamedPlace:
    name: str


class Town(NamedPlace):
    roads: list[Road]           # Liste des routes "officielles" sortantes


class Road:
    places: list[NamedPlace | RoadIntersection]    # Liste des 2 lieux reliés (uniquement 2, pour faire plus, créer un point d'intersection de Road)
    distance: int               # Distance entre les 2 lieux. Impacte le cout en energie
    angle: list[int]            # L'angle à l'indice i de la liste correspond à l'angle entre places[i] et places[i-1]
    cost: int                   # Coût en energie de la traversée de la route. Valeur fixe, le coût réel dépendra d'autres facteurs
    biome: Biome                # Biome traversé par la route. Impacte le cout en energie


class RoadIntersection:
    roads: list[Road]           # Liste des routes sortantes "officielles" de l'intersection


class Biome:
    name: str
    crossing_cost: int          # Valeur représentant la difficulté du biome à être traversé.

